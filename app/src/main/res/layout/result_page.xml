<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/selectedPicture"
        android:layout_width="400px"
        android:layout_height="500px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="400px"
        android:layout_height="500px"
        android:layout_alignBottom="@+id/synPicture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="400px"
                android:layout_height="500px" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="400px"
                android:layout_height="500px" />

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="400px"
                android:layout_height="500px" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/selectedPicture"
        android:layout_marginLeft="22dp"
        android:text="Input photo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/synPicture"
        android:layout_width="400px"
        android:layout_height="500px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/inputText" />

    <TextView
        android:id="@+id/synText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/inputText"
        android:layout_below="@+id/synPicture"
        android:text="Syn Photo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/selectAnother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/synText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:text="SELECT Another" />

    <TextView
        android:id="@+id/recFaceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognized Face"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/scrollView1"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignStart="@+id/scrollView1" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectAnother"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <ImageView
        android:id="@+id/testingImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>