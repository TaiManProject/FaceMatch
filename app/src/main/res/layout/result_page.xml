<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/selectedPicture"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="150dp"
        android:layout_height="400dp"
        android:layout_alignBottom="@+id/synPicture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/selectedPicture">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/selectedPicture"
        android:layout_marginLeft="22dp"
        android:text="Input photo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/synPicture"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/inputText" />

    <TextView
        android:id="@+id/synText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/inputText"
        android:layout_below="@+id/synPicture"
        android:text="Syn Photo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/selectAnother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/synText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="SELECT Another" />

    <TextView
        android:id="@+id/recFaceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectAnother"
        android:layout_toEndOf="@+id/selectAnother"
        android:layout_toRightOf="@+id/selectAnother"
        android:text="Recognized Face"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>